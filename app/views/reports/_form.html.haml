= form_for @report, :html => { :class => 'form-horizontal' } do |f|
  - if @report.errors.any?
    %ul
      - @report.errors.each do |key, value|
        %li 
          %strong
            = key.to_s.titleize
          = value
  .control-group
    = f.label :width, :class => 'control-label'
    .controls
      = f.text_field :width, :class => 'text_field'
  .control-group
    = f.label :height, :class => 'control-label'
    .controls
      = f.text_field :height, :class => 'text_field'
  .control-group
    = f.label :cost, :class => 'control-label'
    .controls
      = f.text_field :cost, :class => 'text_field'
  .control-group
    = f.label :comment, :class => 'control-label'
    .controls
      = f.text_area :comment, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), reports_path, :class => 'btn'
